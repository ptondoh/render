{
  "name": "sap-minimaliste",
  "version": "0.1.0",
  "description": "Système d'Alerte Précoce - Frontend",
  "type": "module",
  "scripts": {
    "prestart": "npm run tailwind:build",
    "predev": "npm run tailwind:build",
    "start": "npm run check && npm run dev",
    "dev": "concurrently \"npm run tailwind:watch\" \"npm run serve\"",
    "tailwind:watch": "tailwindcss -i ./frontend/styles.css -o ./frontend/dist/output.css --watch",
    "tailwind:build": "tailwindcss -i ./frontend/styles.css -o ./frontend/dist/output.css --minify",
    "serve": "python -m http.server 3000 --directory frontend",
    "check": "node check-setup.js",
    "setup": "npm install && npm run tailwind:build && npm run check",
    "test": "playwright test",
    "test:ui": "playwright test --ui"
  },
  "devDependencies": {
    "@playwright/test": "^1.48.0",
    "tailwindcss": "^3.4.17",
    "postcss": "^8.4.49",
    "autoprefixer": "^10.4.20",
    "concurrently": "^9.1.2"
  },
  "keywords": [
    "sap",
    "alerte-precoce",
    "haiti",
    "securite-alimentaire"
  ],
  "author": "SAP Team",
  "license": "MIT"
}
